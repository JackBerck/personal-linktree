---
import SocialMedia from "../SocialMedia/SocialMedia.astro";

const profile = {
  name: "Muhammad Zaki Dzulfikar",
  desc: "Lorem ipsum dolor, sit amet consectetur adipisicing elit. Nihil nam inventore aperiam, officiis dicta dignissimos vero debitis? Officia, laborum aliquam.",
  profession: ["Web developer", "UI/UX Designer", "Student"],
  img: "./profile.jpg",
